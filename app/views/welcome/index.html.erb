

    <div class="col-md-4">
     Facebook Status
      <% if @current_user != nil%>
          <form action="/status" method="post">
            <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
            Status
            </br>
                <textarea rows="5" cols="35" name="message"></textarea>
            </br>
            <input type="submit" value="Submit">
          </form>
      <% end %>

      </br>

      <%= render :template => 'facebook/feed' %>
    </div>
    <div class="col-md-4">Stocks</div>
    <div class="col-md-4">Chat

      <div id="chatMessages">
          <% @messages.each do |message| %>
              <p><%= message.user.name %> : <%=message.message %></p>
          <% end %>
      </div>

      <div id="chatBox">
          <%= form_for(Message.new, remote: true) do |f| %>
              <div class="field">
                <%= f.label :message %><br>
                <%= f.text_area :message %>
              </div>

              <div class="actions">
                <%= f.submit %>
              </div>
          <% end %>
      </div>

    </div>
